Name: foldl-transduce
Version: 0.0.1
Cabal-Version: >=1.8.0.2
Build-Type: Simple
License: BSD3
License-File: LICENSE
Copyright: 2015 Daniel Diaz
Author: Daniel Diaz
Maintainer: diaz_carrete@yahoo.com
Bug-Reports: https://github.com/danidiaz/foldl-transduce/issues
Synopsis: Transducers for folds from foldl.
Description: Transducers for folds from foldl.
Category: Control
Source-Repository head
    Type: git
    Location: git@github.com:danidiaz/foldl-transduce.git

Library
    HS-Source-Dirs: src
    Build-Depends:
        base         >= 4        && < 5   ,
        bytestring   >= 0.9.2.1  && < 0.11,
        text         >= 0.11.2.0 && < 1.3 ,
        transformers >= 0.2.0.0  && < 0.5 ,
        containers                  < 0.6 ,
        profunctors                 < 5.2 ,
        foldl        >= 1.1      && < 2   ,
        comonad      == 4.*
    Exposed-Modules:
        Control.Foldl.Transduce,
        Control.Foldl.Transduce.Text,
        Control.Foldl.Transduce.Internal
    GHC-Options: -O2 -Wall

test-suite doctests
  type:           exitcode-stdio-1.0
  ghc-options:    -Wall -threaded
  hs-source-dirs: tests
  main-is:        doctests.hs

  build-depends:
        base >= 4.4 && < 5
      , doctest >= 0.10.1
